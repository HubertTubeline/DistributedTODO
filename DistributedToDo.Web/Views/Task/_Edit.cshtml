@model DistributedToDo.Web.Models.TaskModel

<div class="panel panel-group panel-default">
    @Html.Hidden("Id", Model.Id)
    <div class="panel-heading">
        <span class="btn-group">
            <button class="btn btn-group btn-success" name="action" value="check"><span class="glyphicon glyphicon-check"></span></button>
            @if (Model.Description != null)
            {
                <span class="btn btn-group btn-default dropdown" data-toggle="collapse" data-target="#@Model.Id">
                    @Model.Name <span class="badge :empty">@Model.Label</span>
                </span>
            }
            else
            {
                <span class="btn btn-group btn-default">
                    @Model.Name <span class="badge :empty">@Model.Label</span>
                </span>
            }
        </span>
    </div>
    @if (Model.Description != null)
    {
        <div class="panel-body collapse" id="@Model.Id">
            <div>
                <p class="well-sm well">@Model.Description</p>
            </div>
        </div>
    }
    <div class="panel-footer">
        @if (Model.Date.ToString("dd.MM.yy") != @"01.01.01")
        {
            <span class="glyphicon glyphicon-calendar"></span>
            @Model.Date.ToString("dd.MM.yy")
        }
        @if (Model.Time.ToString(@"hh\:mm") != @"00:00")
        {
            <span class="glyphicon glyphicon-time">  </span>
            @Model.Time.ToString(@"hh\:mm")
        }
        <button class="btn btn-sm btn-info" name="action" value="edit">
            <span class="glyphicon glyphicon-edit"></span>
            @Resources.Resource.Edit
        </button>
    </div>
</div>